                         class="card-img-top rounded-top-4 object-fit-cover"
                         alt="@evt.Title"
                         style="height: 200px; object-fit: cover;">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <div>
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h5 class="card-title mb-0">@evt.Title</h5>
                                <span class="badge bg-success text-dark">@evt.Category?.Name</span>
                            </div>
                            <p class="text-muted mb-3">@Html.Raw(TruncateText.Truncate(evt.Description, 80))</p>
                        </div>
                        <a asp-controller="Event" asp-action="EventsDetails" asp-route-id="@evt.Id" class="btn btn-outline-primary mt-auto">
                            Mehr wissen
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
<style>
    .hover-shadow:hover {
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        transition: 0.3s ease-in-out;
    }
</style>
